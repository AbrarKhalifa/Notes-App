<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewPriority"
            android:layout_width="20sp"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_height="20sp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notesTitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Titles"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notesSubTitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="subtitles my name is abrar khalifa and what is your name baby dklfjkjdlkfjksdjkffsjksjfhlkaklakldkjdlkkfhlkslfslkflksalkdjlakjdkdjkfkfsflksfsfhskfffkffsjfkflkf"
                android:textColor="#E3E2E2"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/notesDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="23 March 2022"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>